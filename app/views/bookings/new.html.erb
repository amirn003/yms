          <%= simple_form_for [@yacht, @booking] do |f| %>
            <%= f.error_notification %>
            <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

            <div class="form-inputs">
             <label for="booking_check_in">Check-in date</label>
            <%= f.input :check_in, as: :date, html5: true, label: false %>

            <label for="booking_check_out">Check-out date</label>
            <%= f.input :check_out, as: :date, html5: true, label: false %>

            <label for="booking_total">Total</label>
            <%= f.input :total, label: false %>

            <label for="booking_agency">Agency</label>
            <%= f.input :agency, label: false %>
          </div>


            <div class="form-actions">
              <%= f.button :submit, class: "lrg-blue-btn" , value: "Book now!" %>
            </div>
          <% end %>
