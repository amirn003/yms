<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <div class="side-navbar">
        <ul>
          <li><i class="fas fa-calendar"></i> <a href="#">Calendar</a></li>
          <li><i class="fas fa-check"></i> <a href="#">Bookings</a></li>
          <li><i class="fas fa-sailboat"></i> <a href="#">Yachts</a></li>
          <li><i class="fa-solid fa-business-time"></i> <%= link_to "Business", business_path %> </li>
          <li><i class="fas fa-dollar-sign"></i> <%= link_to "Income", income_path %> </li>
          <li><i class="fas fa-map"></i> <a href="#">Tracker</a></li>
          <li><i class="fas fa-envelope"></i> <a href="#">Inbox</a></li>
        </ul>
      </div>
    </div>

    <div class="col-lg-9">
      <h1 class="text-center">Income Summary</h1>

      <div class="row mt-5">
        <div class="col-md-4">
          <div class="card">
            <div class="card-body">
              <h2 class="card-title">Weekly Income</h2>
              <p class="card-text">Total Income for This Week:</p>
              <h3 class="card-amount">$<%= @weekly_income %></h3>
              <%# <%= bar_chart Income.where(user: current_user).group("DATE_TRUNC('week', date)").sum(:amount) %>
            </div>
          </div>
        </div>


        <div class="col-md-4">
          <div class="card">
            <div class="card-body">
              <h2 class="card-title">Monthly Income</h2>
              <p class="card-text">Total Income for This Month:</p>
              <h3 class="card-amount">$<%= @monthly_income %></h3>
              <%# <%= bar_chart Income.where(user: current_user).group("DATE_TRUNC('month', date)").sum(:amount) %>
            </div>
          </div>
        </div>

        <div class="col-md-4">
          <div class="card">
            <div class="card-body">
              <h2 class="card-title">Yearly Income</h2>
              <p class="card-text">Total Income for This Year:</p>
              <h3 class="card-amount">$<%= @yearly_income %></h3>
              <%# <%= bar_chart Income.where(user: current_user).group("DATE_TRUNC('year', date)").sum(:amount) %>
            </div>
          </div>
        </div>


        <%= line_chart Income.where(user: current_user).group(:date).sum(:amount) %>

      </div>
    </div>

  </div>
</div>
