<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <div class="side-navbar">
        <ul>
          <li><i class="fas fa-calendar"></i> <a href="#">Calendar</a></li>
          <li><i class="fas fa-check"></i> <a href="#">Bookings</a></li>
          <li><i class="fas fa-sailboat"></i> <a href="#">Yachts</a></li>
          <li><i class="fa-solid fa-business-time"></i> <%= link_to "Business", incomes_path %> </li>
          <li><i class="fas fa-dollar-sign"></i> <a href="#">Payments</a></li>
          <li><i class="fas fa-map"></i> <a href="#">Tracker</a></li>
          <li><i class="fas fa-envelope"></i> <a href="#">Inbox</a></li>
        </ul>
      </div>
    </div>

    <div class="col-lg-9">
      <div class="incomes">
        <h1 class="mb-5">Business Analysis</h1>

        <div class="row">
        <p>Price by Cities: </p>
          <div class="col-lg-6">
            <p>Mine: </p>
            <%= bar_chart Yacht.where(user: current_user).group(:location).sum(:price) %>
          </div>
          <div class="col-lg-6">
            <p>All: </p>
            <%= bar_chart Yacht.group(:location).sum(:price) %>
          </div>

        </div>

        <p>Yachts Location: </p>
        <%= pie_chart Yacht.group(:location).count %>

        <p>Location of My Yachts: </p>
        <%= pie_chart Yacht.where(user: current_user).group(:location).count %>




        <%# <%= line_chart Yacht.group_by_day(:created_at).count, legend: "bottom", label: "Yachts number" %>

        <p>Number of guest repartition: </p>
        <%= line_chart Yacht.group(:number_of_guests).count %>

      </div>



    </div>
  </div>
</div>
